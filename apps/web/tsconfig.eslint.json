{
	"$schema": "https://json.schemastore.org/tsconfig.json",
	"extends": "./tsconfig.json",
	"compilerOptions": {
		"allowJs": true
	},
	"include": [
		"*.ts",
		"*.tsx",
		"*.js",
		"*.jsx",
		"*.cjs",
		"*.mjs",
    	"./.*.js",
		"turbo",
		"src",
		"bin",
		"scripts",
		"__tests__",
		"__mocks__"
	],
	"exclude": ["node_modules", "./next-env.d.ts"]
}