{
  "$schema": "https://json.schemastore.org/tsconfig.json",
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "allowJs": true
  },
  "include": [
    "scripts",
    "src",
    "next-env.d.ts",
    "next.config.mjs",
    "**/*.ts",
    "**/*.tsx",
    "*.js",
    "*.jsx",
    "*.ts",
    "*.tsx",
    ".*.js",
    ".next/types/**/*.ts"
  ],
  "exclude": ["node_modules", "tasks", "public", "messages", ".turbo", ".next"]
}
