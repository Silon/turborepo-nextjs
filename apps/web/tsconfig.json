{
  "$schema": "https://json.schemastore.org/tsconfig.json",
  "extends": "@repo/typescript-config/nextjs.json",
  "compilerOptions": {
    "baseUrl": "src/",
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "scripts",
    "src",
    "next-env.d.ts",
    "next.config.mjs",
    "**/*.ts",
    "**/*.tsx",
    "*.js",
    "*.jsx",
    "*.ts",
    "*.tsx",
    ".*.js",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "scripts",
    "tasks",
    "public",
    "messages",
    ".turbo",
    ".next"
  ]
}
